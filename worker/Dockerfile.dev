# Python Worker Development Dockerfile with auto-reload
FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install watchdog for file watching
RUN pip install --no-cache-dir watchdog[watchmedo]

# Create non-root user matching host user (UID 1000, GID 1000)
RUN groupadd --gid 1000 hostgroup && \
    useradd --uid 1000 --gid 1000 --shell /bin/bash hostuser && \
    chown -R hostuser:hostgroup /app

USER hostuser

# Use watchmedo to auto-restart on file changes
CMD ["watchmedo", "auto-restart", "--directory=.", "--pattern=*.py", "--recursive", "--", "python", "main.py"]
